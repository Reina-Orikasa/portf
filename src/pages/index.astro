---
import Navigation from "../components/Navigation.astro";
import { Image } from "@astrojs/image/components";
import showFinder from "../assets/show-finder.png";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <Navigation />
    <div
      class="mx-auto p-4 md:p-16 text-center dark:bg-sky-800 dark:text-white rounded-b-3xl md:rounded-b-[8rem] h-96 md:h-full"
    >
      <div class="mb-8" id="header-text">
        <h1 class="text-4xl md:text-6xl font-semibold">Hello, I'm Michael</h1>
        <h2 class="text-lg md:text-2xl mt-4">
          I create websites for fun and travel in my spare time.
        </h2>
      </div>

      <a href="https://github.com/Reina-Orikasa" target="_blank">
        <button
          class="border-2 border-black rounded-xl p-4 transition duration-500 ease-in-out text-black hover:border-black hover:bg-yellow-200 dark:border-white dark:text-white dark:hover:text-black md:text-2xl"
        >
          Github
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-7 h-7 inline-block"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
          </svg>
        </button>
      </a>

      <div class="hidden md:block mt-64">
        <p class="mt-8">Scroll down to see some sites I've made.</p>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-8 h-8 mx-auto mt-4"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3"></path>
        </svg>
      </div>
    </div>
    <div class="grid md:grid-cols-1 gap-2 text-white mt-8 text-center mx-12">
      <div class="bg-sky-800 p-10 rounded-xl md:rounded-[4rem] grid md:grid-cols-2">
        <Image
          src={showFinder}
          class="rounded-xl"
          alt=""
          width={2826}
          height={1682}
        />

        <div class="md:mt-16">
          <a
            href="https://anime-finder-p.netlify.app/"
            target="_blank"
            class="hover:underline"
            ><p class="text-4xl mt-2 md:mb-8 font-bold">ShowFinder</p></a
          >
          <p class="font-light mb-4">Built with:</p>
          <span class="rounded-full border-2 border-white p-2">Next.js</span>
          <span class="rounded-full border-2 border-white p-2">TypeScipt</span>
          <span class="rounded-full border-2 border-white p-2">Tailwind</span>
          <hr class="my-6" />
          <a
            href="https://anime-finder-p.netlify.app/"
            target="_blank"
            class="hover:underline"
          >
            <button
              class="border-2 border-black rounded-xl p-4 transition duration-500 ease-in-out text-black hover:border-black hover:bg-yellow-200 dark:border-white dark:text-white dark:hover:text-black md:text-2xl"
            >
              Check it out
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-7 h-7 inline-block"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
              </svg>
            </button>
          </a>
        </div>
      </div>
      <div class="bg-sky-800 p-10 rounded-xl md:rounded-[5rem] grid md:grid-cols-2">
        <Image
          src={showFinder}
          class="rounded-xl"
          alt=""
          width={2826}
          height={1682}
        />

        <div class="md:mt-16">
          <a
            href="https://steam-p-finder.netlify.app/"
            target="_blank"
            class="hover:underline"
            ><p class="text-4xl mt-2 md:mb-8 font-bold">Steam Summary</p></a
          >
          <p class="font-light mb-5">Built with:</p>
          <span class="rounded-full border-2 border-white p-2">React</span>
          <span class="rounded-full border-2 border-white p-2">Tailwind</span>
          <hr class="my-6" />
          <a href="https://steam-p-finder.netlify.app/" target="_blank">
            <button
              class="border-2 border-black rounded-xl p-4 transition duration-500 ease-in-out text-black hover:border-black hover:bg-yellow-200 dark:border-white dark:text-white dark:hover:text-black md:text-2xl"
            >
              Check it out
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-7 h-7 inline-block"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
              </svg>
            </button>
          </a>
        </div>
      </div>
    </div>

    <div class="text-center py-8 bg-sky-700 rounded-t-3xl md:rounded-t-[8rem] text-white mt-8">
      <p class="text-4xl mb-4">Links</p>
      <button
        class="border-2 border-black rounded-xl p-4 transition duration-500 ease-in-out text-black hover:border-black hover:bg-yellow-200 dark:border-white dark:text-white dark:hover:text-black md:text-2xl"
      >
        Github
      </button>
      <button
        class="border-2 border-black rounded-xl p-4 transition duration-500 ease-in-out text-black hover:border-black hover:bg-yellow-200 dark:border-white dark:text-white dark:hover:text-black md:text-2xl"
      >
        Resume
      </button>
    </div>
  </body>
</html>
