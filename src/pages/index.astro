---
import Navigation from "../components/Navigation.astro";
import showFinder from "../assets/show-finder.webp";
import steamSum from "../assets/steam-summary.webp";
import imbAdv from "../assets/imb-adv.webp";
import Projects from "../components/Projects.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="description" content="Michael Tam's Website" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Michael Tam | Website</title>
  </head>
  <body>
    <Navigation />
    <div
      class="mx-auto p-4 md:p-16 text-center bg-sky-800 text-white rounded-b-3xl md:rounded-b-[8rem] h-96 md:h-full"
    >
      <div class="mb-8" id="header-text">
        <h1 class="text-4xl md:text-6xl font-semibold">Hello, I'm Michael</h1>
        <h2 class="text-lg md:text-2xl mt-4">
          I create websites for fun and travel in my spare time.
        </h2>
      </div>

      <a href="https://github.com/Reina-Orikasa" target="_blank">
        <button
          class="border-2 rounded-xl p-4 transition duration-500 ease-in-out hover:bg-yellow-200 border-white text-white hover:text-black md:text-2xl"
        >
          Github
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-7 h-7 inline-block"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
          </svg>
        </button>
      </a>

      <div class="hidden md:block mt-64">
        <p class="mt-8">Scroll down to see some sites I've made.</p>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-8 h-8 mx-auto mt-4"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3"></path>
        </svg>
      </div>
    </div>
    <div class="grid md:grid-cols-1 gap-2 text-white mt-8 text-center">
      <div
        class="bg-sky-800 p-10 rounded-r-3xl md:rounded-r-[7rem] md:mr-16"
      >
        <Projects
          img={showFinder}
          main="Show Finder"
          sub={["Next.js", "TypeScript", "Tailwind"]}
          width={2826}
          height={1682}
          url="https://anime-finder-p.netlify.app/"
        />
      </div>

      <div class="bg-sky-800 p-10 rounded-l-3xl md:rounded-l-[5rem] md:ml-16">
        <Projects
          img={steamSum}
          main="Steam Summary"
          sub={["React", "Tailwind"]}
          width={2834}
          height={1682}
          url="https://steam-p-finder.netlify.app/"
        />
      </div>

      <div class="bg-sky-800 p-10 rounded-r-3xl md:rounded-r-[7rem] md:mr-16">
        <Projects
          img={imbAdv}
          main="My Adventures"
          sub={["Astro", "Tailwind"]}
          width={2842}
          height={1676}
          url="https://wp-imabari-jet.netlify.app/"
        />
      </div>
    </div>

    <div
      class="text-center py-8 bg-sky-700 rounded-t-3xl md:rounded-t-[8rem] text-white mt-8"
    >
      <p class="text-4xl mb-4 font-semibold">Links</p>
      <a href="https://github.com/Reina-Orikasa" target="_blank">
        <button
          class="border-2 rounded-xl p-4 transition duration-500 ease-in-out hover:bg-yellow-200 border-white text-white hover:text-black md:text-2xl"
        >
          Github
        </button>
      </a>
      <a
        href="https://drive.google.com/file/d/1Pc8XzlnBOewknoo3gttr4ZuNI-T-eO-9/view?usp=sharing"
        target="blank"
      >
        <button
          class="border-2 rounded-xl p-4 transition duration-500 ease-in-out hover:bg-yellow-200 border-white text-white hover:text-black md:text-2xl"
        >
          Resume
        </button>
      </a>
    </div>
  </body>
</html>
